<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_gravity="center_vertical">

    <TextView
        app:layout_constraintBottom_toTopOf="@+id/btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:text="0"
        android:layout_marginHorizontal="20dp"
        android:textSize="45sp"
        android:textAlignment="textEnd"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingBottom="20dp"
        >
        <Button
            android:id="@+id/clear"
            android:layout_width="85dp"
            android:layout_height="90dp"
            app:cornerRadius="60dp"
            android:layout_marginBottom="10dp"
            android:text="C"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <Button
            android:id="@+id/open_bracket"
            android:layout_width="85dp"
            android:layout_height="90dp"
            app:cornerRadius="60dp"
            android:text="("
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/clear"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/orange_100"
            android:backgroundTint="@color/orange_50"
            />
        <Button
            android:id="@+id/close_bracket"
            android:layout_width="85dp"
            android:layout_height="90dp"
            app:cornerRadius="60dp"
            android:text=")"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/open_bracket"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/orange_100"
            android:backgroundTint="@color/orange_50"
            />
        <Button
            android:id="@+id/x"
            android:layout_width="85dp"
            android:layout_height="90dp"
            app:cornerRadius="60dp"
            android:text="X"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/close_bracket"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/purple_100"
            android:backgroundTint="@color/purple_50"
            />
        <Button
            android:id="@+id/sqrt"
            android:layout_width="85dp"
            android:layout_height="90dp"
            app:cornerRadius="60dp"
            android:text="√"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/clear"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="10dp"
            android:textColor="@color/orange_100"
            android:backgroundTint="@color/orange_50"
            />
        <Button
            android:id="@+id/percent"
            android:layout_width="85dp"
            android:layout_height="90dp"
            app:cornerRadius="60dp"
            android:text="%"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/open_bracket"
            app:layout_constraintStart_toEndOf="@+id/sqrt"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/orange_100"
            android:backgroundTint="@color/orange_50"
            />
        <Button
            android:id="@+id/minplus"
            android:layout_width="85dp"
            android:layout_height="90dp"
            app:cornerRadius="60dp"
            android:textSize="20sp"
            android:text="±"
            app:layout_constraintTop_toBottomOf="@+id/close_bracket"
            app:layout_constraintStart_toEndOf="@+id/percent"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/orange_100"
            android:backgroundTint="@color/orange_50"
            />
        <Button
            android:id="@+id/devide"
            android:layout_width="85dp"
            android:layout_height="90dp"
            app:cornerRadius="60dp"
            android:textSize="20sp"
            android:text="/"
            app:layout_constraintTop_toBottomOf="@+id/x"
            app:layout_constraintStart_toEndOf="@+id/minplus"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/purple_100"
            android:backgroundTint="@color/purple_50"
            />
        <Button
            android:id="@+id/seven"
            android:layout_width="85dp"
            android:layout_height="90dp"
            app:cornerRadius="60dp"
            android:backgroundTint="@color/gray_50"
            android:textColor="@color/green_100"
            android:textSize="20sp"
            android:text="7"
            app:layout_constraintTop_toBottomOf="@+id/sqrt"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="10dp"
            />
        <Button
            android:id="@+id/eight"
            android:layout_width="85dp"
            android:layout_height="90dp"
            app:cornerRadius="60dp"
            android:backgroundTint="@color/gray_50"
            android:textColor="@color/green_100"
            android:textSize="20sp"
            android:text="8"
            app:layout_constraintTop_toBottomOf="@+id/percent"
            app:layout_constraintStart_toEndOf="@+id/seven"
            android:layout_marginHorizontal="10dp"
            />
        <Button
            android:id="@+id/nine"
            android:layout_width="85dp"
            android:layout_height="90dp"
            app:cornerRadius="60dp"
            android:backgroundTint="@color/gray_50"
            android:textColor="@color/green_100"
            android:textSize="20sp"
            android:text="9"
            app:layout_constraintTop_toBottomOf="@+id/minplus"
            app:layout_constraintStart_toEndOf="@+id/eight"
            android:layout_marginHorizontal="10dp"
            />
        <Button
            android:id="@+id/min"
            android:layout_width="85dp"
            android:layout_height="90dp"
            app:cornerRadius="60dp"
            android:backgroundTint="@color/purple_50"
            android:textColor="@color/purple_100"
            android:textSize="20sp"
            android:text="-"
            app:layout_constraintTop_toBottomOf="@+id/devide"
            app:layout_constraintStart_toEndOf="@+id/nine"
            android:layout_marginHorizontal="10dp"
            />

        <Button
            android:id="@+id/four"
            android:layout_width="85dp"
            android:layout_height="90dp"
            app:cornerRadius="60dp"
            android:backgroundTint="@color/gray_50"
            android:textColor="@color/green_100"
            android:textSize="20sp"
            android:text="4"
            app:layout_constraintTop_toBottomOf="@+id/seven"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="10dp"
            />
        <Button
            android:id="@+id/five"
            android:layout_width="85dp"
            android:layout_height="90dp"
            app:cornerRadius="60dp"
            android:backgroundTint="@color/gray_50"
            android:textColor="@color/green_100"
            android:textSize="20sp"
            android:text="5"
            app:layout_constraintTop_toBottomOf="@+id/eight"
            app:layout_constraintStart_toEndOf="@+id/four"
            android:layout_marginHorizontal="10dp"
            />
        <Button
            android:id="@+id/six"
            android:layout_width="85dp"
            android:layout_height="90dp"
            app:cornerRadius="60dp"
            android:backgroundTint="@color/gray_50"
            android:textColor="@color/green_100"
            android:textSize="20sp"
            android:text="6"
            app:layout_constraintTop_toBottomOf="@+id/nine"
            app:layout_constraintStart_toEndOf="@+id/five"
            android:layout_marginHorizontal="10dp"
            />
        <Button
            android:id="@+id/plus"
            android:layout_width="85dp"
            android:layout_height="90dp"
            app:cornerRadius="60dp"
            android:backgroundTint="@color/purple_50"
            android:textColor="@color/purple_100"
            android:textSize="20sp"
            android:text="+"
            app:layout_constraintTop_toBottomOf="@+id/min"
            app:layout_constraintStart_toEndOf="@+id/six"
            android:layout_marginHorizontal="10dp"
            />

        <Button
            android:id="@+id/one"
            android:layout_width="85dp"
            android:layout_height="90dp"
            app:cornerRadius="60dp"
            android:backgroundTint="@color/gray_50"
            android:textColor="@color/green_100"
            android:textSize="20sp"
            android:text="1"
            app:layout_constraintTop_toBottomOf="@+id/four"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="10dp"
            />
        <Button
            android:id="@+id/two"
            android:layout_width="85dp"
            android:layout_height="90dp"
            app:cornerRadius="60dp"
            android:backgroundTint="@color/gray_50"
            android:textColor="@color/green_100"
            android:textSize="20sp"
            android:text="2"
            app:layout_constraintTop_toBottomOf="@+id/five"
            app:layout_constraintStart_toEndOf="@+id/one"
            android:layout_marginHorizontal="10dp"
            />
        <Button
            android:id="@+id/three"
            android:layout_width="85dp"
            android:layout_height="90dp"
            app:cornerRadius="60dp"
            android:backgroundTint="@color/gray_50"
            android:textColor="@color/green_100"
            android:textSize="20sp"
            android:text="3"
            app:layout_constraintTop_toBottomOf="@+id/six"
            app:layout_constraintStart_toEndOf="@+id/two"
            android:layout_marginHorizontal="10dp"
            />
        <Button
            android:id="@+id/equal"
            android:layout_width="85dp"
            app:cornerRadius="60dp"
            android:backgroundTint="@color/purple_100"
            android:textColor="@color/white"
            android:layout_height="180dp"
            android:textSize="30sp"
            android:text="="
            app:layout_constraintTop_toBottomOf="@+id/plus"
            app:layout_constraintStart_toEndOf="@+id/three"
            android:layout_marginHorizontal="10dp"
            />

        <Button
            android:id="@+id/dot"
            android:layout_width="85dp"
            android:layout_height="90dp"
            app:cornerRadius="60dp"
            android:backgroundTint="@color/gray_50"
            android:textColor="@color/green_100"
            android:text="."
            app:layout_constraintTop_toBottomOf="@+id/one"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            />
        <Button
            android:id="@+id/zero"
            android:layout_width="85dp"
            android:layout_height="90dp"
            app:cornerRadius="60dp"
            android:backgroundTint="@color/gray_50"
            android:textColor="@color/green_100"
            android:text="0"
            app:layout_constraintTop_toBottomOf="@+id/two"
            app:layout_constraintStart_toEndOf="@+id/dot"

            android:layout_marginHorizontal="10dp"
            android:textSize="20sp"
            />
        <Button
            android:id="@+id/del"
            android:layout_width="85dp"
            android:layout_height="90dp"
            app:cornerRadius="60dp"
            android:backgroundTint="@color/gray_50"
            android:textColor="@color/green_100"
            android:text="del"
            app:layout_constraintTop_toBottomOf="@+id/three"
            app:layout_constraintStart_toEndOf="@+id/zero"
            android:layout_marginHorizontal="10dp"
            android:textSize="20sp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>